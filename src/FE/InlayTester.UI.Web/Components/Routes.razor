@using System.Reflection
@using InlayTester.UI.Web.Components.Layout
@using InlayTester.UI.Web.Users.List

<Router AdditionalAssemblies="mApplicationAssemblies"
        AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <RouteView DefaultLayout="typeof(MainLayout)"
                   RouteData="routeData"/>
        <FocusOnNavigate RouteData="routeData"
                         Selector="h1"/>
    </Found>
</Router>

@code {

    private IEnumerable<Assembly> mApplicationAssemblies = [
        typeof(UserList).Assembly,
    ];

}
